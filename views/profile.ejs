<!doctype html>
<html>
<head>
    <title>X-PENSE</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1>Budget Sheet <span class="fa fa-money"></span></h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>
        <div class="col-sm-6">
          <div class="card">
          <h2>Enter Item</h2>
          <% if (user.local.email) { %>
          <form action="/messages" method="POST">
            <input type="text" value="<%= user.local.email %>" name="name">
            <input type="text" placeholder="item" name="item">
            <input type="number" placeholder="price" name="price" min="0">
            <input type="text" placeholder="type" name="type">
            <input type="date" placeholder="date" name="date">
            <button type="submit">Submit</button>
          </form>
          </div>
        </div>
        <% } %>
          <h3>Expense History</h3>
          <ul class="messages">
            <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <span>Name: <%= messages[i].name %></span>
              <span>Item: <%= messages[i].item %></span>
              <span>Price: $<%= messages[i].price %></span>
              <span>Category: <%= messages[i].type %></span>
              <span>Date: <%= messages[i].date %></span>
              <!-- <span><%= messages[i].thumbUp %></span> -->
              
              <!-- <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span> -->
              <span><i class="fa fa-trash-o" aria-hidden="true"></i></span>
              <!-- <span><i class="fa fa-pencil" aria-hidden="true"></i></span> -->
            </li>
          <% } %>
          </ul>

          

</div>

<script src="main.js"></script>

</body>
</html>
